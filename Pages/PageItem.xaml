    <ScrollView Margin = "15">
        <StackLayout Spacing = "3">
            <Label   
                Text                  = "NOME DA TAREFA"                       
                FontAttributes        = "Bold"
                Padding               = "5"
                HorizontalOptions     = "Start"/>
            <BoxView 
                BackgroundColor       = "Black"
                HeightRequest         = "1"
                WidthRequest          = "400"
                HorizontalOptions     = "Start"/>
            <Label   
                Text                  = "DESCRIÇÃO"                       
                FontAttributes        = "Bold"
                Padding               = "5"
                HorizontalOptions     = "Start"/>
            <Editor  
                x:Name                = "_editor1"
                WidthRequest          = "400"
                HeightRequest         = "150"
                VerticalTextAlignment = "Start"
                BackgroundColor       = "WhiteSmoke"
                HorizontalOptions     = "Start"/>
            <Label   
                Text                  = "PROGRESSO DA TAREFA"                       
                FontAttributes        = "Bold"
                Padding               = "5"
                HorizontalOptions     = "Start"/>
            <ProgressBar 
                WidthRequest          = "400"
                BackgroundColor       = "Red"
                HorizontalOptions     = "Start"/>    
            <Label   
                Text                  = "RESPONSÁVEL"                       
                FontAttributes        = "Bold"
                Padding               = "5"
                HorizontalOptions     = "Start"/>
            <Label   
                Text                  = "PESSOA RESPONSÁVEL"                       
                FontAttributes        = "Bold"
                Padding               = "5"
                HorizontalOptions     = "Start"/>
            <Border
                HeightRequest     = "150"
                WidthRequest      = "400"
                HorizontalOptions = "Start">
                <CollectionView
                    BackgroundColor = "White"
                    ItemsSource     = "{Binding Tarefa}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Spacing="1">
                                <Label 
                                    Text              = "{Binding Nome}"
                                    FontSize          = "15"
                                    FontAttributes    = "Bold"
                                    HorizontalOptions = "Center"/>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Border>
            <Button 
                Grid.Column     = "1"
                Text            = "Adicionar Item"
                Margin          = "10"
                BackgroundColor = "#14d1ca"
                TextColor       = "White"
                FontSize        = "18"
                FontAttributes  = "Bold"
                Clicked         = "Btn_SalvarItem"/>

        </StackLayout>
    </ScrollView>

</ContentPage>