<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CentralInovacao.Pages.PageTestes"
             Title="Página de Testes">

    <ScrollView Margin="15">
        <VerticalStackLayout Spacing="10">
            <Button Text ="Carregar Lista de Usuários"           Clicked="Btn_CarregarListaUsuarios"/>
            <Button Text ="Carregar Lista de Status"             Clicked="Btn_CarregarListaStatus"/>
            <Button Text ="Carregar Lista de Funções"            Clicked="Btn_CarregarListaFuncoes"/>
            <Button Text ="Carregar Lista de Estágios"           Clicked="Btn_CarregarListaEstagios"/>
            <Button Text ="Carregar Lista de Classificações"     Clicked="Btn_CarregarListaClassificacoes"/>
            <Button Text ="Carregar Lista de Documentos"         Clicked="Btn_CarregarTiposDocumentos"/>
            <Button Text ="Carregar Lista de Razões de Declínio" Clicked="Btn_CarregarListaDeclinio"/>           
            <Button Text ="Get Check Open Stage"                 Clicked="Btn_CheckStage"/>
            <Button Text ="Send to Analysis"                     Clicked="Btn_EnviarParaAnalise"/>
            <Button Text ="Classify Project"                     Clicked="Btn_ClassificarProjeto"/>
            <Button Text ="Update Analysis"                      Clicked="Btn_AtualizarAnalise"/>
            <Button Text ="Activate Project"                     Clicked="Btn_AtivarProjeto"/>
            <Button Text ="Decline Project"                      Clicked="Btn_DeclinarProjeto"/>
            <Button Text ="Load Project Squad"                   Clicked="Btn_CarregarSquadProjeto"/>
            <Button Text ="Add User in Squad"                    Clicked="Btn_AdicionarUsuarioSquad"/>

            <Button Text ="Adicionar Imagem no Projeto"          Clicked="OnProfileImageTapped"/>
            <Image x:Name="_img" WidthRequest="400"/>
            


        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>