<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns   = "http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x = "http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class = "CentralInovacao.Pages.PageClassificar"
             Title   = "Classificar Projeto">

    <StackLayout 
        VerticalOptions = "Center"
        Spacing         = "10"
        Margin          = "10">
        <Label 
            Text              = "Selecione uma Classificação para o Projeto"
            FontSize          = "18"
            FontAttributes    = "Bold"
            HorizontalOptions = "Center"/>

        <Picker
            x:Name             = "_picker"
            ItemsSource        = "{Binding ListaDeClassificacoes}"
            ItemDisplayBinding = "{Binding Description}"
            WidthRequest       = "350"
            HorizontalOptions  = "Center"/>

        <Button 
            Text            = "Salvar Classificação"
            Margin          = "10"
            BackgroundColor = "#14d1ca"
            TextColor       = "White"
            FontSize        = "18"
            FontAttributes  = "Bold"
            Clicked         = "Btn_Classificar"/>
        
        <Button 
            Text            = "Retornar"
            Margin          = "10"
            TextColor       = "White"
            FontSize        = "18"
            FontAttributes  = "Bold"
            Clicked         = "Btn_Retornar"/>

    </StackLayout>

</ContentPage>