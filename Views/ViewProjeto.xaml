    <StackLayout>
        <Border HorizontalOptions="Center"
                VerticalOptions  ="Start"
                HeightRequest    ="180"
                WidthRequest     ="180"
                Margin           ="15"
                StrokeShape      ="RoundRectangle 25">
            <ImageButton Source       ="imgbutton_request.png"
                         HeightRequest="150"
                         Clicked      ="Btn_Solicitacao"/>
            </Border>            
            <Label  Text="Solicitação" HorizontalOptions="CenterAndExpand" FontAttributes="Bold" TextColor="DarkGreen"/>

            <BoxView Color="Gray"
                     HeightRequest="1"/>

            <Border HorizontalOptions  = "Center"
                    VerticalOptions    = "Start"
                    HeightRequest      = "180"
                    WidthRequest       = "180"
                    Margin             = "15"
                    StrokeShape        = "RoundRectangle 25">
                <ImageButton Source="imgbutton_analysis.png" HeightRequest="150" Clicked="Btn_AnaliseBriefing"/>
            </Border>
            <Label  Text="Análise e Briefing" HorizontalOptions="CenterAndExpand" FontAttributes="Bold" TextColor="DarkGreen"/>

            <BoxView Color="Gray"
                     HeightRequest="1"/>

            <Border HorizontalOptions  = "Center"
                    VerticalOptions    = "Start"
                    HeightRequest      = "180"
                    WidthRequest       = "180"
                    Margin             = "15"
                    StrokeShape        = "RoundRectangle 25">
                <ImageButton Source="imgbutton_group.png"    HeightRequest="150" Clicked="Btn_Squad"/>
            </Border>
            <Label  Text="Definição do Squad" HorizontalOptions="CenterAndExpand" FontAttributes="Bold" TextColor="DarkGreen"/>

            <BoxView Color="Gray"
                     HeightRequest="1"/>

            <Border HorizontalOptions  = "Center"
                    VerticalOptions    = "Start"
                    HeightRequest      = "180"
                    WidthRequest       = "180"
                    Margin             = "15"
                    StrokeShape        = "RoundRectangle 25">
                <ImageButton Source="imgbutton_planning.png" HeightRequest="150" Clicked="Btn_Planejamento"/>
            </Border>
            <Label Text="Planejamento" HorizontalOptions="CenterAndExpand" FontAttributes="Bold" TextColor="DarkGreen"/>

            <BoxView Color="Gray"
                     HeightRequest="1"/>

            <Border HorizontalOptions  = "Center"
                    VerticalOptions    = "Start"
                    HeightRequest      = "180"
                    WidthRequest       = "180"
                    Margin             = "15"
                    StrokeShape        = "RoundRectangle 25">
                <ImageButton Source="imgbutton_project.png"  HeightRequest="150" Clicked="Btn_Acompanhamento"/>
            </Border>
            <Label Text="Acompanhamento" HorizontalOptions="CenterAndExpand" FontAttributes="Bold" TextColor="DarkGreen"/>

            <BoxView Color="Gray"
                     HeightRequest="1"/>
        </StackLayout>        
    
