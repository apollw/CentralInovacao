<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CentralInovacao.Views.ViewProjeto"             
             Title="Projeto em Andamento">
    
    <!--ESTILOS DA PÁGINA-->
    <ContentPage.Resources>
        <Style TargetType="Border">
            <Setter Property="Margin"            Value="15"/>
            <Setter Property="StrokeShape"       Value="RoundRectangle 25"/>
            <Setter Property="HeightRequest"     Value="125"/>
            <Setter Property="WidthRequest"      Value="140"/>
            <Setter Property="VerticalOptions"   Value="Start"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
        </Style>
        <!--ESTILO DA LABEL-->
        <Style TargetType="Label">
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <!--ESTILO DO IMAGEBUTTON-->
        <Style TargetType="ImageButton">
            <Setter Property="HeightRequest" Value="85"/>
        </Style>
    </ContentPage.Resources>
    
    <FlexLayout Wrap          ="Wrap"
                JustifyContent="Center">
        <!--BOTÃO DE SOLICITAÇÃO-->
        <Border>
            <StackLayout Margin="5">
                <ImageButton Source       ="imgbutton_request.png"
                             Clicked      ="Btn_Solicitacao"/>
                <Label Text="Solicitação"/>
            </StackLayout>            
        </Border>
        <!--BOTÃO DE ANÁLISE-->
        <Border>
            <StackLayout Margin="5">
                <ImageButton Source="imgbutton_analysis.png"  Clicked="Btn_AnaliseBriefing"/>
                <Label Text="Análise"/>
            </StackLayout>            
        </Border>
        <!--BOTÃO DE SQUAD-->
        <Border>
            <StackLayout Margin="5">
                <ImageButton Source="imgbutton_group.png"  Clicked="Btn_Squad"/>
                <Label Text="Grupo"/>
            </StackLayout>
        </Border>
        <!--BOTÃO DE PLANEJAMENTO-->
        <Border>
            <StackLayout Margin="5">
                <ImageButton Source="imgbutton_planning.png" Clicked="Btn_Planejamento"/>
                <Label Text="Planejamento"/>
            </StackLayout>
        </Border>
        <!--BOTÃO DE ACOMPANHAMENTO-->
        <Border>
            <StackLayout Margin="5">
                <ImageButton Source="imgbutton_project.png" Clicked="Btn_Acompanhamento"/>
                <Label Text="Acompanhamento"/>
            </StackLayout>
            </Border>
    </FlexLayout>
    
</ContentPage>



