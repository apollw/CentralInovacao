<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CentralInovacao.Views.ViewProjeto"             
             Title="Projeto em Andamento">
    
    <!--ESTILOS DA PÁGINA-->
    <ContentPage.Resources>
        <Style TargetType="Border">
            <Setter Property="Margin"            Value="15"/>
            <Setter Property="StrokeShape"       Value="RoundRectangle 25"/>
            <Setter Property="HeightRequest"     Value="125"/>
            <Setter Property="WidthRequest"      Value="140"/>
            <Setter Property="VerticalOptions"   Value="Start"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
        </Style>
        <!--ESTILO DA LABEL-->
        <Style TargetType="Label">
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <!--ESTILO DO IMAGEBUTTON-->
        <Style TargetType="ImageButton">
            <Setter Property="HeightRequest" Value="85"/>
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="*,*,*,*"
          ColumnDefinitions="*,*">

        <!--COLUNA 1-->
        <ImageButton Grid.Row="0"
                     Source  ="imgbutton_request.png"
                     Clicked ="Btn_Solicitacao"/>
        <Label Grid.Row             ="0"
               Text                 ="Solicitação" 
               VerticalTextAlignment="End"/>
        <ImageButton Grid.Row ="1"
                     Source   ="imgbutton_analysis.png"  
                     Clicked  ="Btn_AnaliseBriefing"/>
        <Label Grid.Row             ="1"
               Text                 ="Análise"
               VerticalTextAlignment="End"/>
        <ImageButton Grid.Row="2"
                     Source  ="imgbutton_project.png" 
                     Clicked ="Btn_Acompanhamento"/>
        <Label Grid.Row             ="2"
               Text                 ="Acompanhamento"
               VerticalTextAlignment="End"/>
        <!--COLUNA 2-->
        <ImageButton Grid.Row   ="0"
                     Grid.Column="1"
                     Source     ="imgbutton_group.png"
                     Clicked    ="Btn_Squad"/>
        <Label Grid.Row             ="0"
               Grid.Column          ="1"
               Text                 ="Grupo"
               VerticalTextAlignment="End"/>
        <ImageButton Grid.Row   ="1"
                     Grid.Column="1"
                     Source     ="imgbutton_planning.png" 
                     Clicked="Btn_Planejamento"/>
        <Label Grid.Row             ="1"
               Grid.Column          ="1"
               Text                 ="Planejamento"
               VerticalTextAlignment="End"/>

    </Grid>

