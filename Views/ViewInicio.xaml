                        HorizontalOptions = "Fill"
                        Clicked           = "Btn_MeusProjetos">
                    
                    <Button.Background>
                        --><!-- StartPoint defaults to (0,0) --><!--
                        <LinearGradientBrush EndPoint ="0,1">
                            <GradientStop Color  = "White"
                                          Offset = "0.5" />
                            <GradientStop Color  = "LightGreen"
                                          Offset = "1.0" />
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>-->

                <!--<Button Grid.Row          = "4"
                        Grid.Column       = "0"                        
                        Margin            = "10"
                        WidthRequest      = "175"
                        HorizontalOptions = "Start"
                        Text              = "Oportunidades"
                        TextColor         = "DarkGreen"
                        BorderColor       = "LightGreen"
                        FontSize          = "18"
                        FontAttributes    = "Bold"
                        BorderWidth       = "2"
                        BackgroundColor   = "White"
                        Clicked           = "Btn_MinhasOp">
                    <Button.Background>
                        --><!-- StartPoint defaults to (0,0) --><!--
                        <LinearGradientBrush EndPoint ="0,1">
                            <GradientStop Color  = "White"
                                          Offset = "0.5" />
                            <GradientStop Color  = "LightGreen"
