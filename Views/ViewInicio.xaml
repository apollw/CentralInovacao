                    </Button.Background>
                </Button>-->
                
                <!--<Button Grid.Row          = "4"
                        Grid.Column       = "2"                        
                        Margin            = "10"
                        WidthRequest      = "175"
                        HorizontalOptions = "End"                        
                        Text              = "Ranking Geral"
                        TextColor         = "DarkGreen"
                        BorderColor       = "LightGreen"
                        FontSize          = "18"
                        FontAttributes    = "Bold"
                        BorderWidth       = "2"
                        BackgroundColor   = "White"
                        Clicked           = "Btn_RankingGeral">
                    <Button.Background>
                        --><!-- StartPoint defaults to (0,0) --><!--
                        <LinearGradientBrush EndPoint ="0,1">
                            <GradientStop Color  = "White"
                                          Offset = "0.5" />
                            <GradientStop Color  = "LightGreen"
                                          Offset = "1.0" />
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>-->
                
            </Grid>

            <!-- GRID INTERIOR - LINHA 2-->            
            <Grid Grid.Row          = "1"
                  RowDefinitions    = "50,*"
                  ColumnDefinitions = "*,*"
                  BackgroundColor   = "White">
                
                <Border Grid.Row           = "0"
                        Grid.ColumnSpan    = "2"                       
                        HorizontalOptions  = "Center"
                        VerticalOptions    = "Start"
                        HeightRequest      = "35"
                        WidthRequest       = "350"
                        StrokeShape        = "RoundRectangle 0 0 25 25"
                        StrokeThickness    = "2">
                    
                    <Border.Background>
                        <LinearGradientBrush EndPoint ="0,1">
                            <GradientStop Color  = "White"
                                          Offset = "0.25" />
                            <GradientStop Color  = "LightGreen"
                                          Offset = "1.0" />
                        </LinearGradientBrush>
                    </Border.Background>                   
                    
                    <Label  Grid.ColumnSpan    = "2"
                            Text               = "Últimas Interações"
                            TextColor          = "DarkGreen"
                            FontAttributes     = "Bold"
                            FontSize           = "18"                       
                            HorizontalOptions  = "Center"/>
                </Border>

                <Border Grid.Row           = "1"
                        Grid.Column        = "0"
                        HorizontalOptions  = "Center"
                        VerticalOptions    = "StartAndExpand"
                        HeightRequest      = "125"
                        WidthRequest       = "145"
                        StrokeShape        = "RoundRectangle 50">
                    <Image Source          = "foto_perfil.png"
                           BackgroundColor = "WhiteSmoke"/>
                    
                </Border>

                <CarouselView  Grid.Row         = "1"
                               Grid.Column      = "1"
                               x:Name           = "carouselView"
                               ItemsSource      = "{Binding LastInteractions}"
                               IsScrollAnimated = "True"
                               IndicatorView    ="_indicatorView"
                               BackgroundColor  = "White"
                               IsBounceEnabled  = "True"
                               VerticalOptions  = "StartAndExpand">
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <Grid RowDefinitions="35,*">
                                <Label Grid.Row                = "0"
                                       Text                    = "{Binding Title}"
                                       FontSize                = "15"
                                       FontAttributes          = "Bold"
                                       HorizontalOptions       = "Center"
                                       VerticalOptions         = "Start"/>
                                <Label Grid.Row                = "1"
                                       Text                    = "{Binding Description}"
                                       HorizontalOptions       = "Center"
                                       VerticalOptions         = "Start"/>
                            </Grid>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>
                <IndicatorView Grid.Row="1"
                               Grid.Column="1"                               
                               x:Name="_indicatorView"
                               HorizontalOptions="CenterAndExpand"
                               VerticalOptions="CenterAndExpand"
                               IndicatorColor="WhiteSmoke"
                               SelectedIndicatorColor="Green"/>
            </Grid>           

            <!-- GRID INTERIOR - LINHA 3-->
                <Grid Grid.Row        = "2"                      
                      BackgroundColor = "White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height = "50"/>
                        <RowDefinition Height = "50"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row           = "0"
                            Grid.ColumnSpan    = "3"                       
                            HorizontalOptions  = "Center"
                            VerticalOptions    = "Start"
                            HeightRequest      = "35"
                            WidthRequest       = "350"
                            StrokeShape        = "RoundRectangle 0 0 25 25"
                            StrokeThickness    = "2">
                    <Border.Background>
                        <LinearGradientBrush EndPoint ="0,1">
                            <GradientStop Color  = "White"
                                          Offset = "0.25" />
                            <GradientStop Color  = "LightGreen"
                                          Offset = "1.0" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Label  Grid.Row           = "0"
                            Grid.ColumnSpan    = "3"
                            Text               = "Top CEAPE Inovadores"
                            TextColor          = "DarkGreen"
                            FontAttributes     = "Bold"
                            FontSize           = "18"                       
                            HorizontalOptions  = "Center"/>
                    </Border>

                    <Border Grid.Row          = "1"
                            Grid.Column       = "0"
                            HorizontalOptions = "Center"
                            VerticalOptions   = "End"
                            HeightRequest     = "50"
                            WidthRequest      = "100"
                            StrokeShape       = "RoundRectangle 50">
                        <Label Text              = "Danilo"
                               HorizontalOptions = "Center"
                               VerticalOptions   = "Center"/>
                    </Border>
                    <Border Grid.Row          = "1"
                            Grid.Column       = "1"
                            HorizontalOptions = "Center"
                            VerticalOptions   = "End"
                            HeightRequest     = "50"
                            WidthRequest      = "100"
                            StrokeShape       = "RoundRectangle 50">
                        <Label Text              = "Leanderson"
                               HorizontalOptions = "Center"
                               VerticalOptions   = "Center"/>
                    </Border>
                    <Border Grid.Row          = "1"
                            Grid.Column       = "2"
                            HorizontalOptions = "Center"
                            VerticalOptions   = "End"
                            HeightRequest     = "50"
                            WidthRequest      = "100"
                            StrokeShape       = "RoundRectangle 50">
                        <Label Text              = "Edem"
                               HorizontalOptions = "Center"
                               VerticalOptions   = "Center"/>
                    </Border>
                </Grid>

            <!-- GRID INTERIOR - LINHA 4-->
            <Grid Grid.Row        = "3"
                  BackgroundColor = "White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Grid.Row           = "0"
                            Grid.ColumnSpan    = "3"                       
                            HorizontalOptions  = "Center"
                            VerticalOptions    = "Start"
                            HeightRequest      = "35"
                            WidthRequest       = "350"
                            StrokeShape        = "RoundRectangle 0 0 25 25"
                            StrokeThickness    = "2">
                    <Border.Background>
                        <LinearGradientBrush EndPoint ="0,1">
                            <GradientStop Color  = "White"
                                          Offset = "0.25" />
                            <GradientStop Color  = "LightGreen"
                                          Offset = "1.0" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Label  Grid.Row           = "0"
                            Grid.ColumnSpan    = "3"
                            Text               = "Cursos da Gestão de Inovação"
                            TextColor          = "DarkGreen"
                            FontAttributes     = "Bold"
                            FontSize           = "18"                       
                            HorizontalOptions  = "Center"/>
                </Border>
                <Border Grid.Row="1"
                        StrokeShape       = "RoundRectangle 20">
                    <Image Source   = "banner_1.png"
                           Aspect   = "Fill">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnImageTapped" />
                        </Image.GestureRecognizers>
                    </Image>
                </Border>
                <Label Grid.Row="2"
                       Grid.Column="1"
                       Text="Acesse a Academia CEAPE e confira o Módulo"
                       FontSize="15"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"/>
            </Grid>
            <!-- GRID INTERIOR - LINHA 5-->
            <Grid Grid.Row = "4"
                  Margin   = "5"
                  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Text              = "Nova Oportunidade"
                        TextColor         = "Black"
                        BorderColor       = "Gray"
                        BorderWidth       = "1"
                        FontSize          = "12"
                        FontAttributes    = "Bold"
                        Grid.Column       = "0"
                        HeightRequest     = "75"
                        WidthRequest      = "150"
                        HorizontalOptions = "Start"
                        BackgroundColor   = "LightSeaGreen"
                        Clicked           = "Btn_NovaOp">
                    <Button.Background>
                        <!-- StartPoint defaults to (0,0) -->
                        <LinearGradientBrush EndPoint ="0,1">
                            <GradientStop Color  = "White"
                                          Offset = "0.15" />
                            <GradientStop Color  = "Gray"
                                          Offset = "1.0" />
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button Text              = "Abrir Chamado"
                        TextColor         = "Black"
                        BorderColor       = "LightGreen"
                        BorderWidth       = "1"
                        FontSize          = "12"
                        FontAttributes    = "Bold"
                        Grid.Column       = "1"
                        HeightRequest     = "75"
                        WidthRequest      = "150"
                        HorizontalOptions = "End"
                        BackgroundColor   = "Green"
                        Clicked           = "Btn_Chamado">
                    <Button.Background>
                        <!-- StartPoint defaults to (0,0) -->
                        <LinearGradientBrush EndPoint ="0,1">
                            <GradientStop Color  = "White"
                                          Offset = "0.15" />
                            <GradientStop Color  = "Green"
                                          Offset = "1.0" />
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </Grid>            
        </Grid>     
    </ScrollView>
    
</ContentPage>