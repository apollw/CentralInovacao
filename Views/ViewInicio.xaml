             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CentralInovacao.Views.ViewInicio"
             Title="Central de Ideias"
             BackgroundColor="LightGray"
             >

    <ContentPage.ToolbarItems>
        <ToolbarItem Text    = "Logout" 
                     Clicked = "Btn_Logout"/>        
    </ContentPage.ToolbarItems>

    <ScrollView>
