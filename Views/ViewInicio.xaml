        <!-- GRID GERAL - Forma Alternativa-->
        <Grid Margin            = "15"
              RowSpacing        = "10"
              RowDefinitions    = "500,200,125,*,*">

            <!-- GRID INTERIOR - LINHA 1-->
            <Grid Grid.Row        = "0"
                  BackgroundColor = "White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="175"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Border Grid.Row           = "0"
                        Grid.Column        = "1"
                        Margin             = "15"                        
                        HorizontalOptions  = "Center"
                        VerticalOptions    = "Start"
                        HeightRequest      = "135"
                        WidthRequest       = "150"
                        StrokeShape        = "RoundRectangle 50">
                    <Image x:Name          = "_fotoPerfil"
                           Source          = "foto_perfil.png"
                           BackgroundColor = "#90DFAA">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnProfileImageTapped" />
                        </Image.GestureRecognizers>
                    </Image>
                </Border>
                
                <Label  Text                    = "Leanderson Silva"
                        FontSize                = "15"
                        FontAttributes          = "Bold"
                        Grid.Row                = "1"
                        Grid.Column             = "1"                        
                        WidthRequest            = "300"
                        HorizontalTextAlignment = "Center"
                        HorizontalOptions       = "Center"
                        VerticalOptions         = "Start"/>    
                
                <Border Grid.Row          = "1"
                        Grid.Column       = "0"
                        Margin            = "15"
                        HorizontalOptions = "Start"
                        VerticalOptions   = "End"
                        HeightRequest     = "50"
                        WidthRequest      = "100"
                        StrokeShape       = "RoundRectangle 50">                    
                    <Label Text              = "1º"
                           HorizontalOptions = "Center"
                           VerticalOptions   = "Center"/>
                </Border>                
                <Border Grid.Row          = "1"
                        Grid.Column       = "1"
                        Margin            = "15"
                        HorizontalOptions = "Center"
                        VerticalOptions   = "End"
                        HeightRequest     = "50"
                        WidthRequest      = "100"
                        StrokeShape       = "RoundRectangle 50">                    
                    <Label Text              = "10"
                           HorizontalOptions = "Center"
                           VerticalOptions   = "Center"/>
                </Border>                
                <Border Grid.Row          = "1"
                        Grid.Column       = "2"
                        Margin            = "15"
                        HorizontalOptions = "End"
                        VerticalOptions   = "End"
                        HeightRequest     = "50"
                        WidthRequest      = "100"
                        StrokeShape       = "RoundRectangle 50">                    
                    <Label Text              = "15"
                           HorizontalOptions = "Center"
                           VerticalOptions   = "Center"/>                    
                </Border>
                <Label  Grid.Row          = "2"
                        Grid.Column       = "0"                        
                        Text              = "Ranking"
                        HorizontalOptions = "Center"/>
                <Label  Grid.Row          = "2"
                        Grid.Column       = "1"
                        Text              = "Projetos"
                        HorizontalOptions = "Center"/>
                <Label  Grid.Row          = "2"
                        Grid.Column       = "2"
                        Text              = "Oportunidades"
                        HorizontalOptions = "Center"/>

                <Label Grid.Row                = "3"
                       Grid.ColumnSpan         = "3"
                       Text                    = "Minhas Medalhas"
                       FontAttributes          = "Bold"
                       HorizontalTextAlignment = "Center"
                       />

                <ScrollView Grid.Row        = "4"
                            Grid.ColumnSpan = "3"
                            Orientation     = "Horizontal">
                    <HorizontalStackLayout HorizontalOptions = "Center"
                                           Spacing           = "15">
                        <Image Source = "img_medalha1.png" WidthRequest="50"/>
                        <Image Source = "img_medalha2.png" WidthRequest="50"/>
                        <Image Source = "img_medalha3.png" WidthRequest="50"/>
                        <Image Source = "img_medalha1.png" WidthRequest="50"/>
                        <Image Source = "img_medalha1.png" WidthRequest="50"/>
                        <Image Source = "img_medalha2.png" WidthRequest="50"/>
                        <Image Source = "img_medalha3.png" WidthRequest="50"/>
                        <Image Source = "img_medalha1.png" WidthRequest="50"/>
                        <Image Source = "img_medalha1.png" WidthRequest="50"/>
                        <Image Source = "img_medalha2.png" WidthRequest="50"/>
                        <Image Source = "img_medalha3.png" WidthRequest="50"/>
                        <Image Source = "img_medalha1.png" WidthRequest="50"/>
                    </HorizontalStackLayout>
                </ScrollView>


                <!--<Button Grid.Row          = "3"
                        Grid.ColumnSpan   = "3"
                        Text              = "Meus Projetos"
                        TextColor         = "DarkGreen"
                        FontSize          = "18"
                        FontAttributes    = "Bold"
