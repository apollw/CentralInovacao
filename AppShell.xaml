<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CentralInovacao.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CentralInovacao"
    xmlns:views="clr-namespace:CentralInovacao.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarIsVisible="False">

    <ShellItem    Title               = "CEAPE Inovação"
                  Route               = "MainPage"
                  FlyoutItemIsVisible = "False">
        <ShellContent ContentTemplate = "{DataTemplate local:MainPage}"/>
    </ShellItem>

    <FlyoutItem FlyoutDisplayOptions  = "AsMultipleItems">
        <ShellContent Title           = "Página Principal"
                      ContentTemplate = "{DataTemplate views:ViewFirstPage}"
                      Route           = "ViewFirstPage"/>
        <ShellContent Title           = "Página Dois"
                      ContentTemplate = "{DataTemplate views:ViewSecondPage}"
                      Route           = "ViewSecondPage"/>
    </FlyoutItem>
    
    

</Shell>
